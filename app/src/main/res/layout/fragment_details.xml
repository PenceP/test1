<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Fullscreen Backdrop -->
    <ImageView
        android:id="@+id/details_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/shared_element_hero"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Ambient Mesh Gradient Overlay (updated dynamically) -->
    <View
        android:id="@+id/ambient_background_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fullscreen_gradient" />

    <!-- Navigation Dock -->
    <FrameLayout
        android:id="@+id/navigation_dock"
        android:layout_width="@dimen/nav_dock_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nav_dock_margin_start"
        android:layout_marginTop="@dimen/nav_dock_margin_top"
        android:layout_marginBottom="@dimen/nav_dock_margin_bottom"
        android:translationX="@dimen/nav_dock_translation_x"
        android:layout_gravity="start|center_vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:id="@+id/navigation_dock_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nav_glass_background"
            android:elevation="6dp" />

        <LinearLayout
            android:id="@+id/navigation_sidebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/nav_dock_padding_start"
            android:paddingEnd="@dimen/nav_dock_padding_end"
            android:paddingTop="@dimen/nav_dock_padding_vertical"
            android:paddingBottom="@dimen/nav_dock_padding_vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_search"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:layout_marginBottom="@dimen/nav_button_margin_bottom"
                android:background="@drawable/nav_icon_button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:nextFocusRight="@id/details_scroll"
                app:cornerRadius="@dimen/nav_button_corner_radius"
                app:icon="@drawable/ic_search"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/nav_icon_size"
                app:iconTint="@color/nav_icon_color"
                app:rippleColor="@color/nav_button_ripple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_home"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:layout_marginBottom="@dimen/nav_button_margin_bottom"
                android:background="@drawable/nav_icon_button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:nextFocusRight="@id/details_scroll"
                app:cornerRadius="@dimen/nav_button_corner_radius"
                app:icon="@drawable/ic_home"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/nav_icon_size"
                app:iconTint="@color/nav_icon_color"
                app:rippleColor="@color/nav_button_ripple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_movies"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:layout_marginBottom="@dimen/nav_button_margin_bottom"
                android:background="@drawable/nav_icon_button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:nextFocusRight="@id/details_scroll"
                app:cornerRadius="@dimen/nav_button_corner_radius"
                app:icon="@drawable/ic_movie"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/nav_icon_size"
                app:iconTint="@color/nav_icon_color"
                app:rippleColor="@color/nav_button_ripple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_tv_shows"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:layout_marginBottom="@dimen/nav_button_margin_bottom"
                android:background="@drawable/nav_icon_button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:nextFocusRight="@id/details_scroll"
                app:cornerRadius="@dimen/nav_button_corner_radius"
                app:icon="@drawable/ic_tv"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/nav_icon_size"
                app:iconTint="@color/nav_icon_color"
                app:rippleColor="@color/nav_button_ripple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_settings"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:background="@drawable/nav_icon_button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:nextFocusRight="@id/details_scroll"
                app:cornerRadius="@dimen/nav_button_corner_radius"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/nav_icon_size"
                app:iconTint="@color/nav_icon_color"
                app:rippleColor="@color/nav_button_ripple" />
        </LinearLayout>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/details_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:paddingBottom="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Content -->
            <LinearLayout
                android:id="@+id/details_hero_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/details_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_logo_margin_top"
                    android:layout_marginBottom="@dimen/hero_logo_margin_bottom"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/hero_logo_max_width"
                    android:maxHeight="@dimen/hero_logo_max_height"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:contentDescription="@string/hero_logo_content_description"
                    tools:visibility="visible"
                    tools:src="@drawable/ic_movie" />

                <!-- Title -->
                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_title_margin_top"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hero_title_size"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Guardians of the Galaxy" />

                <TextView
                    android:id="@+id/details_metadata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_metadata_margin_top"
                    android:textColor="#F0FFFFFF"
                    android:textSize="@dimen/hero_metadata_size"
                    android:textStyle="bold"
                    tools:text="98% Match • 2025 • PG-13 • 1h 48m" />

                <!-- Genre Tags -->
                <TextView
                    android:id="@+id/details_genre_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_genre_margin_top"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hero_genre_size"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Science Fiction • Adventure • Action" />

                <!-- Overview -->
                <TextView
                    android:id="@+id/details_overview"
                    android:layout_width="900dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_overview_margin_top"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hero_overview_size"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="Light years from Earth, 26 years after being abducted, Peter Quill finds himself the prime target of a manhunt after discovering an orb wanted by Ronan the Accuser." />

                <!-- Cast -->
                <TextView
                    android:id="@+id/details_cast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_cast_margin_top"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/hero_cast_size"
                    android:visibility="gone"
                    tools:text="Starring: Chris Pratt, Zoe Saldaña, Dave Bautista, Vin Diesel, Bradley Cooper"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/details_rating_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/details_rating_imdb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/imdb_logo" />

                        <TextView
                            android:id="@+id/details_rating_imdb_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="8.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_rating_rotten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rotten_tomatoes" />

                        <TextView
                            android:id="@+id/details_rating_rotten_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="94%" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_rating_tmdb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/metacritic_logo" />

                        <TextView
                            android:id="@+id/details_rating_tmdb_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="7.8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_rating_trakt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/trakt2" />

                        <TextView
                            android:id="@+id/details_rating_trakt_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="7.5" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Rating Buttons (Thumbs) -->
            <LinearLayout
                android:id="@+id/details_feedback_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_thumbs_up"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/thumb_button_bg"
                    android:contentDescription="Thumbs Up"
                    android:focusable="true"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_thumb_up_outline"
                    android:tint="@color/thumb_icon_tint" />

                <ImageButton
                    android:id="@+id/button_thumbs_side"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/thumb_button_bg"
                    android:contentDescription="Thumbs Side"
                    android:focusable="true"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_thumb_side_outline"
                    android:rotation="270"
                    android:tint="@color/thumb_icon_tint" />

                <ImageButton
                    android:id="@+id/button_thumbs_down"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/thumb_button_bg"
                    android:contentDescription="Thumbs Down"
                    android:focusable="true"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_thumb_down_outline"
                    android:tint="@color/thumb_icon_tint" />
            </LinearLayout>

            <!-- Action Buttons (Vertical Stack) -->
            <LinearLayout
                android:id="@+id/details_action_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_play"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:contentDescription="@string/details_tooltip_play"
                    android:focusable="true"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:text="Play"
                    android:textAllCaps="false"
                    android:textColor="@color/action_button_text"
                    android:textSize="14sp"
                    app:backgroundTint="@color/action_button_bg_tint"
                    app:cornerRadius="6dp"
                    app:icon="@drawable/ic_play_circle"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/action_button_icon" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_trailer"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:contentDescription="@string/details_tooltip_trailer"
                    android:focusable="true"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:text="Trailer"
                    android:textAllCaps="false"
                    android:textColor="@color/action_button_text"
                    android:textSize="14sp"
                    app:backgroundTint="@color/action_button_bg_tint"
                    app:cornerRadius="6dp"
                    app:icon="@drawable/ic_movie"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/action_button_icon" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_watched"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:contentDescription="Mark as Watched"
                    android:focusable="true"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:text="Mark Watched"
                    android:textAllCaps="false"
                    android:textColor="@color/action_button_text"
                    android:textSize="14sp"
                    app:backgroundTint="@color/action_button_bg_tint"
                    app:cornerRadius="6dp"
                    app:icon="@drawable/ic_visibility"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/action_button_icon" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_collection"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Add to Collection"
                    android:focusable="true"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="0dp"
                    android:text="Add to Collection"
                    android:textAllCaps="false"
                    android:textColor="@color/action_button_text"
                    android:textSize="14sp"
                    app:backgroundTint="@color/action_button_bg_tint"
                    app:cornerRadius="6dp"
                    app:icon="@drawable/ic_playlist_add"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/action_button_icon" />
            </LinearLayout>

            <!-- Sections (People, Collection, Similar) -->
            <LinearLayout
                android:id="@+id/rows_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- People Section -->
                <LinearLayout
                    android:id="@+id/cast_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/cast_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="People"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cast_empty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/details_section_cast_empty"
                        android:textColor="#999999"
                        android:visibility="gone" />

                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/cast_row"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:clipToPadding="false"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <!-- Collection Section -->
                <LinearLayout
                    android:id="@+id/collection_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/collection_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="The Avengers Collection" />

                    <TextView
                        android:id="@+id/collection_empty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/details_section_collection_empty"
                        android:textColor="#999999"
                        android:visibility="gone" />

                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/collection_row"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:clipToPadding="false"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <!-- Similar Section -->
                <LinearLayout
                    android:id="@+id/similar_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/similar_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details_section_similar"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/similar_empty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/details_section_similar_empty"
                        android:textColor="#999999"
                        android:visibility="gone" />

                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/similar_row"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:clipToPadding="false"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/details_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>
