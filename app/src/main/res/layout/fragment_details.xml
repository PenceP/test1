<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Fullscreen Backdrop -->
    <ImageView
        android:id="@+id/details_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/shared_element_hero"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Ambient Mesh Gradient Overlay (updated dynamically) -->
    <View
        android:id="@+id/ambient_background_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fullscreen_gradient" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/details_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Hero Content -->
            <LinearLayout
                android:id="@+id/details_hero_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/hero_container_padding_start"
                android:paddingEnd="@dimen/hero_container_padding_end"
                android:paddingBottom="@dimen/hero_container_padding_bottom">

                <ImageView
                    android:id="@+id/details_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_logo_margin_top"
                    android:layout_marginBottom="@dimen/hero_logo_margin_bottom"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/hero_logo_max_width"
                    android:maxHeight="@dimen/hero_logo_max_height"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:contentDescription="@string/hero_logo_content_description"
                    tools:visibility="visible"
                    tools:src="@drawable/ic_movie" />

                <!-- Title -->
                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_title_margin_top"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hero_title_size"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Guardians of the Galaxy" />

                <TextView
                    android:id="@+id/details_metadata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_metadata_margin_top"
                    android:textColor="#F0FFFFFF"
                    android:textSize="@dimen/hero_metadata_size"
                    android:textStyle="bold"
                    tools:text="98% Match • 2025 • PG-13 • 1h 48m" />

                <!-- Genre Tags -->
                <TextView
                    android:id="@+id/details_genre_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_genre_margin_top"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hero_genre_size"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Science Fiction • Adventure • Action" />

                <!-- Overview -->
                <TextView
                    android:id="@+id/details_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_overview_margin_top"
                    android:layout_marginEnd="@dimen/hero_overview_margin_end"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hero_overview_size"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="Light years from Earth, 26 years after being abducted, Peter Quill finds himself the prime target of a manhunt after discovering an orb wanted by Ronan the Accuser." />

                <!-- Cast -->
                <TextView
                    android:id="@+id/details_cast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hero_cast_margin_top"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/hero_cast_size"
                    android:visibility="gone"
                    tools:text="Starring: Chris Pratt, Zoe Saldaña, Dave Bautista, Vin Diesel, Bradley Cooper"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- Action Buttons (Horizontal Row) -->
            <LinearLayout
                android:id="@+id/details_action_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:animateLayoutChanges="true">

                    
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="16dp" />

                <!-- Prominent Play Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_play"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/details_button_height"
                    android:layout_marginEnd="@dimen/details_button_spacing"
                    android:contentDescription="@string/details_tooltip_play"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:minWidth="@dimen/details_primary_button_min_width"
                    android:paddingEnd="34dp"
                    android:text="Play"
                    android:textAllCaps="false"
                    android:textColor="@color/play_button_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/play_button_bg"
                    app:backgroundTint="@null"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_play_circle"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconSize="@dimen/details_button_icon_size"
                    app:iconTint="@color/play_button_text_color" />

                <!-- Subtle Secondary Buttons (Icon Only) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_trailer"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/details_secondary_button_size"
                    android:layout_marginEnd="@dimen/details_button_spacing"
                    android:contentDescription="@string/details_tooltip_trailer"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:text=""
                    android:textSize="14sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:background="@drawable/glass_pill_bg"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_movie"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="@dimen/details_button_icon_size"
                    app:iconTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_watchlist"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/details_secondary_button_size"
                    android:layout_marginEnd="@dimen/details_button_spacing"
                    android:contentDescription="Add to Watchlist"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:text=""
                    android:textSize="14sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:background="@drawable/glass_pill_bg"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_playlist_add"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="@dimen/details_button_icon_size"
                    app:iconTint="@android:color/white" />

                <!-- Rating Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_thumbs_up"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/details_secondary_button_size"
                    android:layout_marginEnd="@dimen/details_button_spacing"
                    android:contentDescription="Thumbs Up"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:text=""
                    android:textSize="14sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:background="@drawable/glass_pill_bg"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_thumb_up"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="@dimen/details_button_icon_size"
                    app:iconTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_thumbs_down"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/details_secondary_button_size"
                    android:contentDescription="Thumbs Down"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:text=""
                    android:textSize="14sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:background="@drawable/glass_pill_bg"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_thumb_down"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="@dimen/details_button_icon_size"
                    app:iconTint="@android:color/white" />
            </LinearLayout>

            <!-- TV Show Seasons & Episodes -->
            <LinearLayout
                android:id="@+id/tv_show_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_row_spacing"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:visibility="gone">

                <androidx.leanback.widget.HorizontalGridView
                    android:id="@+id/season_row"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="6dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/details_row_horizontal_padding"
                    android:paddingEnd="@dimen/details_row_horizontal_padding"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.leanback.widget.HorizontalGridView
                    android:id="@+id/episode_row"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_height_episode"
                    android:layout_marginTop="2dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/details_row_horizontal_padding"
                    android:paddingEnd="@dimen/details_row_horizontal_padding"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- Sections (People, Collection, Similar) -->
            <LinearLayout
                android:id="@+id/rows_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:animateLayoutChanges="true">

                <!-- Episode Info Shelf -->
                <LinearLayout
                    android:id="@+id/episode_info_shelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/shelf_episode_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        tools:text="S1 E04 - Episode Title" />

                    <TextView
                        android:id="@+id/shelf_episode_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        tools:text="Episode overview preview goes here. Up to three lines of text for quick reading." />
                </LinearLayout>

                <!-- People Section -->
                <LinearLayout
                    android:id="@+id/cast_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/details_row_spacing"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/cast_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="People"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/details_row_title_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cast_empty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/details_section_cast_empty"
                        android:textColor="#999999"
                        android:visibility="gone" />

                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/cast_row"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_square"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:paddingStart="@dimen/details_row_horizontal_padding"
                        android:paddingEnd="@dimen/details_row_horizontal_padding"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <!-- Collection Section -->
                <LinearLayout
                    android:id="@+id/collection_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/details_row_spacing"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/collection_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/details_row_title_size"
                        android:textStyle="bold"
                        tools:text="The Avengers Collection" />

                    <TextView
                        android:id="@+id/collection_empty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/details_section_collection_empty"
                        android:textColor="#999999"
                        android:visibility="gone" />

                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/collection_row"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_landscape"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:paddingStart="@dimen/details_row_horizontal_padding"
                        android:paddingEnd="@dimen/details_row_horizontal_padding"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <!-- Similar Section -->
                <LinearLayout
                    android:id="@+id/similar_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/details_row_spacing"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/similar_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details_section_similar"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/details_row_title_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/similar_empty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/details_section_similar_empty"
                        android:textColor="#999999"
                        android:visibility="gone" />

                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/similar_row"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_landscape"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:paddingStart="@dimen/details_row_horizontal_padding"
                        android:paddingEnd="@dimen/details_row_horizontal_padding"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/details_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>
