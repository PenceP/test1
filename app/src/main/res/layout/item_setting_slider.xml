<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- Label and Value Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/slider_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#A1A1AA"
            android:textSize="14sp"
            tools:text="Minimum Bitrate" />

        <TextView
            android:id="@+id/slider_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="0 Mbps" />
    </LinearLayout>

    <!-- Slider Control Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_decrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_slider_button"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <SeekBar
            android:id="@+id/slider_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:min="0"
            android:max="100"
            android:progress="0"
            android:progressTint="#22C55E"
            android:thumbTint="#22C55E"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Button
            android:id="@+id/btn_increase"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_slider_button"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

</LinearLayout>
