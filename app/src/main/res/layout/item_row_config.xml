<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="afterDescendants"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:descendantFocusability="afterDescendants">

        <!-- Row Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Trending Movies" />
        </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Move Up Button -->
            <ImageButton
                android:id="@+id/btn_move_up"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Move up"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/btn_move_down"
                android:src="@android:drawable/arrow_up_float" />

            <!-- Move Down Button -->
            <ImageButton
                android:id="@+id/btn_move_down"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Move down"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/btn_move_up"
                android:nextFocusRight="@+id/btn_orientation"
                android:src="@android:drawable/arrow_down_float" />

            <!-- Orientation Toggle Button -->
            <ImageButton
                android:id="@+id/btn_orientation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Change orientation"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/btn_move_down"
                android:nextFocusRight="@+id/visibility_switch"
                android:src="@drawable/ic_orientation_landscape" />

            <!-- Visibility Toggle -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/visibility_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/btn_orientation"
                tools:checked="true" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
