<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controls_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top gradient and title bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/gradient_player_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:paddingVertical="24dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Movie Title - Episode 1" />

        <TextView
            android:id="@+id/episode_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#B3FFFFFF"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="S1 E5"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Center play/pause indicator -->
    <ImageView
        android:id="@+id/center_play_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:alpha="0"
        android:src="@drawable/ic_play"
        android:visibility="gone"
        tools:alpha="1"
        tools:visibility="visible" />

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_player_bottom"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Progress bar row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Current time -->
            <TextView
                android:id="@+id/time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="1:23:45" />

            <!-- SeekBar -->
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@id/btn_play_pause"
                android:nextFocusLeft="@id/time_current"
                android:nextFocusRight="@id/time_total" />

            <!-- Total time -->
            <TextView
                android:id="@+id/time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:gravity="end"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp"
                tools:text="2:15:30" />

        </LinearLayout>

        <!-- Controls row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Left side: Play/Pause button -->
            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/player_button_background"
                android:contentDescription="Play/Pause"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_pause"
                android:nextFocusUp="@id/seek_bar"
                android:nextFocusRight="@id/btn_subtitles" />

            <!-- Spacer -->
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Right side: Settings buttons -->
            <ImageButton
                android:id="@+id/btn_subtitles"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/player_button_background"
                android:contentDescription="Subtitles"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_subtitles"
                android:nextFocusUp="@id/seek_bar"
                android:nextFocusLeft="@id/btn_play_pause"
                android:nextFocusRight="@id/btn_audio" />

            <ImageButton
                android:id="@+id/btn_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/player_button_background"
                android:contentDescription="Audio Track"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_audio_track"
                android:nextFocusUp="@id/seek_bar"
                android:nextFocusLeft="@id/btn_subtitles"
                android:nextFocusRight="@id/btn_quality" />

            <ImageButton
                android:id="@+id/btn_quality"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/player_button_background"
                android:contentDescription="Quality Settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_quality"
                android:nextFocusUp="@id/seek_bar"
                android:nextFocusLeft="@id/btn_audio" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
