<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_focusable_background"
    android:gravity="center_vertical"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Subtitle icon -->
    <ImageView
        android:id="@+id/subtitle_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_subtitles"
        android:tint="@color/white_70"
        tools:ignore="ContentDescription" />

    <!-- Text container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Main label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subtitle_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="English" />

            <!-- Badge container -->
            <FrameLayout
                android:id="@+id/badge_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/badge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="EMB" />
            </FrameLayout>
        </LinearLayout>

        <!-- Detail text -->
        <TextView
            android:id="@+id/subtitle_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white_50"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="Embedded â€¢ Default"
            tools:visibility="visible" />
    </LinearLayout>

    <!-- Check mark -->
    <ImageView
        android:id="@+id/subtitle_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_check"
        android:tint="@color/accent_color"
        android:visibility="invisible"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

</LinearLayout>
