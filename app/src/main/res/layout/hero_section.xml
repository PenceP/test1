<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hero_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Backdrop Image -->
    <ImageView
        android:id="@+id/hero_backdrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/hero_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hero Info Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintWidth_max="700dp">

        <!-- Title -->
        <TextView
            android:id="@+id/hero_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="Alien: Romulus" />

        <!-- Meta Info (Year, Rating, Runtime, Genre) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Rating Badge -->
            <TextView
                android:id="@+id/hero_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rating_badge_bg"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:paddingEnd="6dp"
                android:paddingBottom="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="70%" />

            <!-- Year -->
            <TextView
                android:id="@+id/hero_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="2024" />

            <!-- Rating Label -->
            <TextView
                android:id="@+id/hero_content_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/content_rating_bg"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="R"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Runtime -->
            <TextView
                android:id="@+id/hero_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="1h 59m" />
        </LinearLayout>

        <!-- Genre -->
        <TextView
            android:id="@+id/hero_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            tools:text="Science Fiction" />

        <!-- Overview -->
        <TextView
            android:id="@+id/hero_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.1"
            tools:text="While scavenging the deep ends of a derelict space station, a group of young space colonizers come face to face with the most terrifying life form in the universe." />

        <!-- Cast -->
        <TextView
            android:id="@+id/hero_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            tools:text="Cailee Spaeny, David Jonsson, Archie Renaux, Isabela Merced" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
