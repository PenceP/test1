<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <!-- Tab Bar for Screen Selection -->
    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab_home"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Home"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:strokeColor="@color/tab_button_stroke_color"
            app:strokeWidth="3dp"
            app:cornerRadius="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@+id/rows_list" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab_movies"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Movies"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:strokeColor="@color/tab_button_stroke_color"
            app:strokeWidth="3dp"
            app:cornerRadius="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@+id/rows_list" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab_tv_shows"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="TV Shows"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:strokeColor="@color/tab_button_stroke_color"
            app:strokeWidth="3dp"
            app:cornerRadius="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@+id/rows_list" />
    </LinearLayout>

    <!-- Rows List -->
    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/rows_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="16dp"
        app:numberOfColumns="1" />

    <!-- Reset Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset_defaults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Reset to Defaults"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
