<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:focusable="false"
    android:clickable="false"
    android:descendantFocusability="afterDescendants"
    app:cardBackgroundColor="#26FFFFFF"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Service Icon -->
            <androidx.cardview.widget.CardView
                android:id="@+id/service_icon_container"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                tools:cardBackgroundColor="#2563EB">

                <TextView
                    android:id="@+id/service_icon_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    tools:text="P" />
            </androidx.cardview.widget.CardView>

            <!-- Service Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:letterSpacing="-0.01"
                    tools:text="Premiumize" />

                <TextView
                    android:id="@+id/service_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#A1A1AA"
                    android:textSize="16sp"
                    tools:text="High-speed cloud downloader" />
            </LinearLayout>

            <!-- Connected Badge -->
            <LinearLayout
                android:id="@+id/connected_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_connected_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_pulse_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECTED"
                    android:textColor="#22C55E"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Content Container -->
        <FrameLayout
            android:id="@+id/account_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Disconnected View - API Key Input -->
            <LinearLayout
                android:id="@+id/disconnected_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- API Key Input -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="API KEY"
                            android:textColor="#71717A"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/api_key_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Enter your API key"
                            android:textColor="@android:color/white"
                            android:textColorHint="#52525B"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Verify Button -->
                <Button
                    android:id="@+id/btn_verify"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/selector_btn_glass"
                    android:fontFamily="sans-serif-black"
                    android:text="Verify &amp; Connect"
                    android:textColor="@drawable/selector_btn_glass_text"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:clickable="true" />

                <!-- Verifying Progress -->
                <LinearLayout
                    android:id="@+id/verifying_view"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ProgressBar
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:indeterminateTint="#A855F7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verifying..."
                        android:textColor="#A1A1AA"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Connected View -->
            <LinearLayout
                android:id="@+id/connected_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Account Info Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Account Status Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="STATUS"
                                android:textColor="#71717A"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/account_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#22C55E"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium"
                                tools:text="Premium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Days Remaining Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EXPIRES IN"
                                android:textColor="#71717A"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/days_remaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium"
                                tools:text="142 days" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Action Button -->
                <Button
                    android:id="@+id/btn_disconnect"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_danger"
                    android:fontFamily="sans-serif-medium"
                    android:text="Disconnect"
                    android:textColor="#F87171"
                    android:textSize="14sp"
                    android:focusable="true"
                    android:clickable="true" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
