<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FACC15" />
            <corners android:radius="26dp" />
        </shape>
    </item>

    <!-- Main background -->
    <item android:inset="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#33FACC15"
                android:endColor="#1AFFFFFF" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#FACC15" /> <!-- Yellow border -->
        </shape>
    </item>
</layer-list>
